@model DeixarComentarioViewModel
@{
    ViewData["Title"] = "Deixar Comentário";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="alert alert-info" role="alert">
  <h4 class="alert-heading">Serviço de @Model.Servico</h4>
  <hr>
  <p class="mb-0">Realizado em @Model.Data às @Model.Horario</p>
</div>

<form asp-controller="Comentarios" asp-action="DeixarComentario" method="post">
    <input hidden type="number" asp-for="ServicoId" />
    <div class="form-group">
        <label asp-for="TextoComentario">Comentários<span class="text-danger">&nbsp;*</span></label>
        <textarea rows="4" type="text" asp-for="TextoComentario" class="form-control"></textarea>
        <span asp-validation-for="@Model.TextoComentario" class="text-danger"></span>
    </div>

    <button class="btn btn-outline-primary" type="submit"><i class='fas fa-comment-dots'></i>&nbsp;Comentar</button>
</form>