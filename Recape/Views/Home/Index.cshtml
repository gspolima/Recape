@{
    ViewData["Title"] = "Início";
}

<section id="cards-container">
    <a asp-controller="Agendamentos" asp-action="ListarAgendamentos">
        <div class="card" style="width: 18rem;">
            <img src="~/img/home-atendimento.jpg" class="card-img-top" alt="..." width="286" height="250">
            <div class="card-body">
                <h5 class="card-title">Consultas Agendadadas</h5>
                <p class="card-text">Marque um horário com um de nossos profissionais</p>
            </div>
        </div>
    </a>

    <div class="card" style="width: 18rem;">
        <img src="~/img/home-bus.jpg" class="card-img-top" alt="..." width="286" height="250">
        <div class="card-body">
            <h5 class="card-title">Compra de Passagens</h5>
            <p class="card-text">Reserve assentos numa frota de veículos pensada para o seu comforto</p>
        </div>
    </div>
    <a href="#contact-info">
        <div class="card" style="width: 18rem;">
            <img src="~/img/home-contato.jpg" class="card-img-top" width="286" height="250" alt="...">
            <div class="card-body">
                <h5 class="card-title">Contato</h5>
                <p class="card-text">Saiba como nos contactar</p>
            </div>
        </div>
    </a>

</section>

<section id="contact-info-container">

    <div id="founders" class="text-center">
        <div class="card mb-3" style="max-width: 20em;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/home-gustavo.jpg" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body align-middle">
                        <h5 class="card-text">Gustavo Sampaio</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-3" style="max-width: 20em;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/img/home-juan.jpg" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body align-middle">
                        <h5 class="card-text">Juan Miguel</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div id="contact-info">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1990.55082234598!2d-38.480346501980286!3d-3.7880492160213763!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7c7458b85fffbc1%3A0x6235bbed04f25cdf!2sWSTC%20%7C%20SOHO!5e0!3m2!1sen!2sbr!4v1633548736510!5m2!1sen!2sbr" width="750" height="550" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

        <div id="contact-form">
            <h2>Contate-nos</h2>
            <form>
                <div class="form-group">
                    <label for="nome">Seu Nome</label>
                    <input type="text" class="form-control form-control-lg" id="nome">
                </div>
                <div class="form-group">
                    <label for="email">Seu Email</label>
                    <input type="email" class="form-control form-control-lg" id="email" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="assunto">Assunto</label>
                    <input type="text" class="form-control form-control-lg" id="assunto" placeholder="">
                </div>
                <div class="form-group">
                    <label for="mensagem">Mensagem</label>
                    <textarea class="form-control form-control-lg" id="mensagem" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</section>
