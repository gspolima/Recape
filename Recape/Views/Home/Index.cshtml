@{
    ViewData["Title"] = "Início";
}

@section Head {
    <link rel="stylesheet" href="~/css/Index.css" />
}

<section id="introducao">
    <div id="introducao-container">
        <div id="logo">
            <img loading="lazy" src="~/img/home-logo.webp" width="350" height="350" style="border-radius: 18em" />
        </div>
        <div id="apresentacao">
            <div id="descricao">
                <h1>Somos a Recape!</h1>
                <p>Oferecemos serviços em agendamento de consultas médicas e viagens rodoviárias</p>
            </div>
            <div id="acoes">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Cadastre-se</a>
                <a href="#servicos" class="btn btn-primary">Conheça nossos serviços</a>
            </div>
        </div>
    </div>
</section>

<section id="servicos">
    <div id="servicos-container">
        <a class="text-decoration-none" asp-controller="Agendamentos" asp-action="ListarAgendamentos">
            <div class="card">
                <img loading="lazy" src="~/img/home-atendimento.webp" class="card-img-top" alt="..." width="286" height="250">
                <div class="card-body">
                    <h5 class="card-title">Consultas Agendadas</h5>
                    <p class="card-text">Marque um horário com um de nossos profissionais</p>
                </div>
            </div>
        </a>

        <a asp-controller="Reservas" asp-action="ListarReservas" class="text-decoration-none">
            <div class="card">
                <img loading="lazy" src="~/img/home-bus.webp" class="card-img-top" alt="..." width="286" height="250">
                <div class="card-body">
                    <h5 class="card-title">Compra de Passagens</h5>
                    <p class="card-text">Reserve assentos numa frota de veículos pensada para o seu comforto</p>
                </div>
            </div>
        </a>

        <a class="text-decoration-none" href="#contato">
            <div class="card">
                <img loading="lazy" src="~/img/home-contato.webp" class="card-img-top" width="286" height="250" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Contato</h5>
                    <p class="card-text">Saiba como nos contactar</p>
                </div>
            </div>
        </a>
    </div>
</section>

<section id="fundadores">
    <div id="fundadores-container" class="text-center">
        <div class="card mb-3" style="max-width: 20em;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img loading="lazy" src="~/img/home-gustavo.webp" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body align-middle">
                        <h5 class="card-text">Gustavo Sampaio</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mb-3" style="max-width: 20em;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img loading="lazy" src="~/img/home-juan.webp" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body align-middle">
                        <h5 class="card-text">Juan Miguel</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="contato">
    <div id="contato-container">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3981.252295495474!2d-38.490122939709046!3d-3.755160181365639!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x7c74963201865ff%3A0x2d77cda38272811f!2sShopping%20Iguatemi%20Fortaleza!5e0!3m2!1sen!2sbr!4v1633723625697!5m2!1sen!2sbr" width="600" height="500" style="border:0; border-radius: 2em;" allowfullscreen="" loading="lazy"></iframe>

        <div>
            <h2>Contate-nos</h2>
            <form id="contato-form">
                <div class="form-group">
                    <label for="nome">Seu Nome</label>
                    <input type="text" class="form-control form-control" id="nome" required>
                </div>
                <div class="form-group">
                    <label for="email">Seu Email</label>
                    <input type="email" class="form-control form-control" id="email" aria-describedby="emailHelp" required>
                </div>
                <div class="form-group">
                    <label for="assunto">Assunto</label>
                    <input type="text" class="form-control form-control" id="assunto" required>
                </div>
                <div class="form-group">
                    <label for="mensagem">Mensagem</label>
                    <textarea class="form-control form-control" id="mensagem" rows="4" required></textarea>
                </div>
                <button id="mensagem-enviar" type="submit" class="btn btn-primary">Enviar</button>
                <span id="mensagem-sucesso" class="float-right alert alert-success small font-weight-bold" role="alert">
                    Enviado!
                </span>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <script type="text/javascript" src="~/js/Index.js"></script>
}