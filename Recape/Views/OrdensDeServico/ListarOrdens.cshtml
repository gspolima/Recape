@model List<OrdemDeServicoViewModel>

@{
    ViewData["Title"] = "Ordens de Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Ordens de Serviço</h1>
<hr />
<a id="novaOrdemDeServico" asp-controller="OrdensDeServico" asp-action="CriarOrdem" class="btn btn-success">Nova Ordem de Serviço</a>

@if (Model.Count != 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Serviço</th>
                <th scope="col">Valor</th>
                <th scope="col">Data</th>
                <th scope="col">Horário</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ordem in Model)
            {
                <tr>
                    <th scope="row">@ordem.Id</th>
                    <td>@ordem.Servico</td>
                    <td>R$ @ordem.Valor</td>
                    <td>@ordem.Data</td>
                    <td>@ordem.Horario</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info" role="alert">
        Ainda não há ordens de serviço para este usuário.
    </div>
}

<style>
    #novaOrdemDeServico {
        margin-bottom: 1em;
    }
</style>